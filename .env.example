# Copy this file to .env and fill in values before running locally.
# .env is gitignored — never commit real secrets.
#
# All TSR_* variables correspond to Settings fields in backend/app/core/config.py.
# Environment variables take precedence over config.toml.

# ---------------------------------------------------------------------------
# Application
# ---------------------------------------------------------------------------

TSR_APP_ENV=development
TSR_LOG_LEVEL=INFO

# ---------------------------------------------------------------------------
# Database
# ---------------------------------------------------------------------------

# Full MongoDB connection string (may contain credentials — set via env only)
TSR_MONGODB_URI=mongodb://localhost:27017/treasure

# ---------------------------------------------------------------------------
# Security
# ---------------------------------------------------------------------------

# Fernet encryption key for sensitive fields.
# Auto-generated to backend/secrets/encryption.key on first run if unset.
# TSR_ENCRYPTION_KEY=

# ---------------------------------------------------------------------------
# LLM provider
# ---------------------------------------------------------------------------

# Provider: openai | anthropic | ollama (default: anthropic)
# TSR_LLM_PROVIDER=anthropic
# TSR_LLM_MODEL=claude-sonnet-4-6

# API keys — required when using the matching provider (env only)
# TSR_LLM_ANTHROPIC_API_KEY=
# TSR_LLM_OPENAI_API_KEY=

# Ollama base URL (ollama provider only)
# TSR_LLM_OLLAMA_BASE_URL=http://localhost:11434

# ---------------------------------------------------------------------------
# Docker
# ---------------------------------------------------------------------------

# Port the frontend container exposes on the host (default: 8080)
APP_PORT=8080
